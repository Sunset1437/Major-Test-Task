<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MajorTestTask.MainPage"
             Title="Программа учёта"
             BackgroundColor="#e8a346">
    <VerticalStackLayout VerticalOptions="StartAndExpand" HeightRequest="700">
        <HorizontalStackLayout Margin="10">
            <Image Source="github.png" WidthRequest="50" HeightRequest="50" BackgroundColor="Transparent"/>
            <Label Margin="10,0" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Text="Made by Sunset1437" TextColor="White" FontSize="21"/>
        </HorizontalStackLayout>
        <VerticalStackLayout VerticalOptions="EndAndExpand">
            <Button x:Name="ToApplications" Clicked="ToApplications_Clicked" Text="К заявкам" TextColor="Black" Command="{Binding GoToApplicationCommand}" FontSize="21" WidthRequest="300" HeightRequest="60"/>
        </VerticalStackLayout>
    </VerticalStackLayout>

</ContentPage>
